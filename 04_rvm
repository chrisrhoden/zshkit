function rvm-prompt() {
  gemset=$(rvm-gemset)
  rubyname=$(rvm-ruby-name)
  if [[ x$gemset != x ]]; then
    rubyname="$rubyname%{$fg[white]%}#%{$fg[green]%}$gemset"
  fi
  echo "%{$fg[red]%}$rubyname %{$reset_color%}"
}

function rvm-ruby-name(){
  rvm info 2> /dev/null| egrep -v '^$' | head -1 | cut -d@ -f1 | sed -e 's/:$//' | sed -e 's/^ruby-//'
}

function rvm-gemset(){
  echo `rvm info 2> /dev/null| head -1 | grep @ | cut -d@ -f2 | sed -e 's/:$//'`
}
